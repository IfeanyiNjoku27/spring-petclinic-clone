pipeline {
    agent any 

    triggers {
        cron('H/5 * * * 1')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & Test with Coverage') {
            steps {
                sh 'chmod +x ./mvnw'
                sh './mvnw clean test jacoco:report'
            }
        }

        stage('Package Artifact') {
            steps {
                sh './mvnw package -DskipTests'
            }
        }
    }

    post {
        always {
            jacoco()
        }
        success {
            archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
        }
    }
}